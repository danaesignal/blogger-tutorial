<h1>Articles tagged '<%=@tag.name%>'</h1>
<ul id="articles">
  <% @tag.articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
    </li>
  <% end %>

</ul>
<br />
<p><%= link_to "View Articles List", articles_path %></p>
<p><%= link_to "View Tag List", tags_path %></p>
<%= link_to "Delete", tag_path(@tag), data: {confirm: "Are you sure? This is irreversible!"}, method: :delete %>
